# Variables substituted by the autoconf configure script:

CC = @CC@
CFLAGS = @CFLAGS@ -I.
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
RANLIB = @RANLIB@
@SET_MAKE@

AR = ar

all: libs

OBJECTS = debug_malloc.o mpi_utils.o
LIBNAME = util.a

libs: $(LIBNAME)

util.a: $(OBJECTS)
	rm -f $@
	$(AR) r $@ $(OBJECTS)
	$(RANLIB) $@

.c.o:
	$(CC) -c $(CFLAGS) $< -o $@

clean: 
	rm -f $(OBJECTS) core $(LIBNAME)
