# Variables substituted by the autoconf configure script:

SHELL = @SHELL@

CC = @CC@
CFLAGS = @CFLAGS@
CPPFLAGS = @CPPFLAGS@ -I../util -I../matrices -I.
DEFS = @DEFS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
RANLIB = @RANLIB@
@SET_MAKE@

AR = ar

all: libs

OBJECTS = fieldio.o evectmatrixio.o matrixio.o
LIBNAME = matrixio.a

libs: $(LIBNAME)

matrixio.a: $(OBJECTS)
	rm -f $@
	$(AR) r $@ $(OBJECTS)
	$(RANLIB) $@

.c.o:
	$(CC) $(DEFS) $(CPPFLAGS) -c $(CFLAGS) $< -o $@

clean: 
	rm -f $(OBJECTS) core $(LIBNAME)
