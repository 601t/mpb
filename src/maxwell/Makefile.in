# Variables substituted by the autoconf configure script:

CC = @CC@
CFLAGS = @CFLAGS@
INCLUDES = @INCLUDES@  -I../util -I../matrices
DEFS = @DEFS@
LDFLAGS = @LDFLAGS@
LIBS = @LIBS@
RANLIB = @RANLIB@
@SET_MAKE@

AR = ar

all: libs

OBJECTS = maxwell.o maxwell_op.o maxwell_pre.o
LIBNAME = maxwell.a

libs: $(LIBNAME)

maxwell.a: $(OBJECTS)
	rm -f $@
	$(AR) r $@ $(OBJECTS)
	$(RANLIB) $@

.c.o:
	$(CC) $(DEFS) $(INCLUDES) -c $(CFLAGS) $< -o $@

clean: 
	rm -f $(OBJECTS) core $(LIBNAME)
